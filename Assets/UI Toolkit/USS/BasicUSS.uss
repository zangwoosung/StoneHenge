/* Global settings */
:root {
    --primary-color: #3b82f6;
    --secondary-color: #1e40af;
    --background-color:white;
    --text-color: #ffffff;
    --background-color: #1f2937;
    --hover-color: #2563eb;
    --font-size: 14px;
      border-width:1px;
      border-color:white; 
      
}

/* General container */
.container {
    width: 30%;
    height: 100%;
    flex-direction: column;
    padding: 10px;  
    position: absolute;
    margin-left:5%;
}

.full-box{
    flex-direction: column;    
    background-color: grey;
    width: 100%;
    height: 100%;   
    position: absolute;
    align-items: center; 
    justify-content: center;
}
.popup-container {
    background-color : grey;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
    height: 100%;
    width: 90%;
    padding: 30px;
    font-size: 20px;
}
/* Initial hidden state */
.fade-hidden {
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.5s;
    transition-timing-function: ease-in-out;
}
/* Visible state */
.fade-visible {
    opacity: 1;
}
/* Base style with transition */
.fade {
    opacity: 0;
    transition-property: opacity;
    transition-duration: .5s;
    transition-timing-function: ease-in-out;
}

/* When this class is added, the element fades in */
.fade-in {
    opacity: 1;
}

.title-box{   
   
   border-width:0px;
    border-color:white;
    border-radius: 4px;
    flex-direction:row;
    width:100%;
    height:10%;
    flex-direction: row;
    justify-content: flex-end; /* Align children to the right */
    padding-right: 10px; /* Optional spacing */
    padding-left: 10px; /* Optional spacing */
    align-items: center;
    
}
.head-box{

    border-width:0px;
    border-color:white;
    border-radius: 4px;
    width:100%;
    height:20%;
    flex-direction: row;
    justify-content: flex-end; /* Align children to the right */
    padding-right: 10px; /* Optional spacing */

}
.body-box{
    border-width:0px;
    border-color:white;
    border-radius: 4px;
    flex-direction: column;  /* or row, depending on your layout */
    align-items: center; 
